<%- include('header'); -%>
<div class="content">
<form method="POST" action="api/register">
<div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account:</p>
    <hr>
      <table border='0' width='480px' cellpadding='0' cellspacing='2' align='left'>
      <tr>
        <td><label for="email"><b>Email</b></label></td>
        <td><input type="text" placeholder="Enter Email" name="email" required></td>
      </tr><tr>
        <td><label for="psw"><b>Password</b></label></td>
        <td><input type="password" placeholder="Enter Password" name="psw" required></td>
      </tr><tr>
        <td><label for="psw-repeat"><b>Repeat Password</b></label></td>
        <td><input type="password" placeholder="Repeat Password" name="psw-repeat" required></td>
      </tr><tr>
          <td><label for="societyName"><b>Socitey</b></label></td>
          <td><input type="text" placeholder="Society" name="societyName" required></td>
      </tr><tr>
          <td><label for="contact"><b>Contact</b></label></td>
          <td><input type="text" placeholder="Full Contact Name" name="contact" required></td>
      </tr><tr>
          <td><label for="address"><b>Address</b></label></td>
          <td><textarea type="text" placeholder="Full Address" name="address" rows=3 required></textarea></td>
      </tr><tr>
          <td><label for="postCode"><b>ZIP Code</b></label></td>
          <td><input type="text" placeholder="ZIP Code" name="postCode" required></td>
      </tr><tr>
          <td><label for="city"><b>City</b></label></td>
          <td><input type="text" placeholder="City" name="city" required></td>
      </tr><tr>
          <td><label for="tel"><b>Phone no.</b></label></td>
          <td><input type="text" placeholder="Phone Number" name="tel" required></td>
      </tr><tr>
          <td><label for="fax"><b>Fax</b></label></td>
          <td><input type="text" placeholder="Fax" name="fax" required></td>
      </tr>
      </table>

    <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

    <div class="clearfix">
      <button type="submit" class="signupbtn">Sign Up</button>
    </div>
  </div>
</form>
  <%- include('footer'); -%>